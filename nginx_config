server {
  server_name socket.rch.app; 

  location / {
    proxy_pass "http://127.0.0.1:8081";
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_cache_bypass $http_upgrade;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/socket.rch.app/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/socket.rch.app/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = socket.rch.app) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  listen 80;
  server_name socket.rch.app;
    return 404; # managed by Certbot


}
